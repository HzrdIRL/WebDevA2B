body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
.vertical-center
    min-height: 80%  // Fallback for browsers do NOT support vh unit
    min-height: 80vh // These two lines are counted as one :-)
    display: flex
    align-items: center
.right-align
  text-align: right
.page-header
  text-align: center
.center-text
  text-align: center
.center-align
  align-items: center
.signOut
  color: blue
.btn-primary
  background-color: #5bc0de
  width: 100%
.my-button
  colour: blue
.movie-title
  position: absolute
  bottom: 0
.movie-list
  text-align: center
  justify-content: center
.movieTile
  position: relative
  display: inline-block
  width: 500px
  height: 250px
  margin: 5px
  color: white
  background-color: #1a3a95
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black
  z-index: 1;
.movieTileOver //overlay film tiles with hidden detail div
  @extend .movieTile
  background: none
  z-index: 10
  position: absolute
  margin-left: -505px //issue with overlay displaying on incorrect film tile
.movieTileOver .movieTileOverInner
  @extend .movieTileOver
  margin-left: -250px
  margin-top: 0px
  padding: 10px
  background-color: rgba(26,26,26,.75)
  visibility: hidden
.movieTileOver:hover .movieTileOverInner
  visibility: visible
.movieTileOverInner p
  margin: 0px
.movieInfo
  min-width: 400px
  margin-top: 30px
  margin-bottom: 40px
.movieDetails
  text-align: center
.commentForm
  align-items: center
  height: 100%
  width: 100%
  max-width: 550px
  min-width: 400px
  margin: auto
.commentText
  width: 100%
  height: 200px
.btn-comment
  width: 100%
.comment
  width: 100%
  border: 4px solid #2B2B2B
  padding: 20px
  margin: auto
  margin-top: 5px
  max-width: 600px
  align-items: center
.commentTable
  width: 100%
.commentTableRow
  width: 100%
.commentBody
  margin: 15px
  font-size: 20px
  text-align: left
h1.commentTitle
  text-align: center
td.username
  text-align: right
  font-size: 14px
td.time
  text-align: left
  font-size: 10px
.error
  display: none
.comments
  width: 100%
  height: 100%
  min-width: 400px
  text-align: center