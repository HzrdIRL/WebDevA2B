doctype html
html
  head

    // Required CDN's and extensions
    title= 'Blogsite'
    // required for incorporating boostrap
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", rel="stylesheet")
    link(href="/node_modules/gentelella/build/css/custom.min.css", rel="stylesheet")
    link(rel= 'stylesheet', href= '/stylesheets/style.css')
    // required for incorporating JQuery
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js", type='text/javascript')
    script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", type='text/javascript')

    // required for google OAuth
    script(src="https://apis.google.com/js/platform.js" async defer)

    // required for incorporating angular
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js", type='text/javascript')

    meta(name="google-signin-client_id", content= '73713153185-ml2ui4qa12p4tpfgiuhgebpsi374gnqc.apps.googleusercontent.com')
    block head

  body
    // Navbar template
    nav(class= "navbar navbar-default navbar-fixed-top" role="navigation")
      .navbar-header
        button(type= "button", class= "navbar-toggle",
        data-toggle= "collapse", data-target= "#example-navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a(class="navbar-brand" href="#") Movies

      .collapse.navbar-collapse#example-navbar-collapse
        ul.nav.navbar-nav
          li: a(href="/") Home
          li: a(href="/") About
          li: a(href="/") Contact Us

        ul.nav.navbar-nav.navbar-right
          li: a(href="#")
            span.glyphicon.glyphicon-user Sign Up
          li: a(href="#")
            span.glyphicon.glyphicon-log-in Login

    block content
