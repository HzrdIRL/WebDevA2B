extends layout

block content
        .vertical-center
            .container.col-xs-10
                .row
                    .col-sm-4.col-sm-offset-4
                        .page-header
                            h1 Registration
                        if errors
                            div
                                ul
                                    each item in errors
                                        li= item.msg
                        form.form-group(action="/submitReg", method="post")
                            input(class="form-control", type="text",id="name" name="name", placeholder="Name or Alias: 'Jean-Luc Picard'")
                            br
                            input(class="form-control", type="text", id="email", name="email", placeholder="Email: JohnML@jmail.com")
                            br
                            input(class="form-control", type="password", id="password", name="password", placeholder="Password: Minimum 4 characters")
                            br
                            input(class="form-control", type="password",id="confirmPassword", name="confirmPassword", placeholder="Confirm Password")
                            br
                            button(class="btn btn-primary", type="submit") submit
                        p   Please ensure that your registration credentials fit the following conditions:
                            br
                            ul
                                li Name must consist of only letters and/or numbers
                                li Email must be of the form 'host@host.com'
                                li Password must be a minimum of four characters, including at least one character and one number.

        script(src="javascripts/login.js", type='text/javascript')