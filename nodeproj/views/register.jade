extends layout
block content
        .vertical-center
            .container.col-xs-10
                .row
                    .col-md-4.col-md-offset-4
                        .page-header
                            h1 Registration

                        form.form-group(action="/submitReg", method="post")
                            input(class="form-control", type="text",id="name" name="name", placeholder="Name or Alias: 'John Movie-Lover'")
                            if errors
                                div
                                    ul
                                        each item in errors
                                            li= item.msg
                            br
                            input(class="form-control", type="text", name="email", placeholder="Email: JohnML@jmail.com")
                            br
                            input(class="form-control", type="password", name="password", placeholder="Password: Minimum 4 characters")
                            br
                            input(class="form-control", type="password",id="confirm password", name="confirm password", placeholder="Confirm Password")
                            br
                            button(class="btn btn-primary", type="submit") submit

        script(src="javascripts/login.js", type='text/javascript')