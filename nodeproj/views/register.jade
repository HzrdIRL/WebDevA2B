extends layout
block content
        .vertical-center
            .container.col-xs-10
                .row
                    .col-md-4.col-md-offset-4
                        .page-header
                            h1 Registeration

                        form.form-group(action="/submitReg", method="post")
                            input(class="form-control", type="text", name="name", placeholder="Name or Alias: 'John Movie-Lover'")
                            br
                            if errors
                                p= item.msg
                                br
                            input(class="form-control", type="text", name="email", placeholder="Email: JohnML@jmail.com")
                            br
                            if errors
                                p= item.msg
                                br
                            input(class="form-control", type="password", name="password", placeholder="Password: Minimum 4 characters")
                            br
                            if errors
                                p= item.msg
                                br
                            input(class="form-control", type="password", name="confirm password", placeholder="Confirm Password")
                            br
                            if errors
                                p= item.msg
                                br
                            button(class="btn btn-primary", type="submit") login

        script(src="javascripts/login.js", type='text/javascript')